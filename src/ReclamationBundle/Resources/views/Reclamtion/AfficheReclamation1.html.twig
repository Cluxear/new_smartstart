<div class="typo">
    <div class="container">





        <div class="page-header">
            <h3 class="bars">Tableaux des Réclamations</h3>
        </div>

        <div class="bs-docs-example">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Sujet</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Action</th>


                </tr>
                </thead>
                <tbody>
                {% for r in reclamations %}
                {% if r.getStatusreclamation =="Archiver" %}
                {% else %}
                <tr>
                    <td> {{ r.getSujetreclamation }}</td>
                    <td>{{ r.getDescriptionreclamation }}</td>
                    <td>{{ r.getDatereclamation|date('Y-m-d ') }}</td>
                    <td>
                        {% if r.getStatusreclamation =="Traitée" %}
                        <span class="label label-success">
                                            {% endif %}
                            {% if r.getStatusreclamation =="En cours" %}
                            <span class="label label-warning">
                                            {% endif %} {{ r.getStatusreclamation }}</span>
                    </td>

                    <td> <a href="{{ path('reclamation_detail_user',{id:r.id}) }}" class="btn btn-primary btn-sm">Details</a></td>
                     {% endif %}
                    {% endfor %}
</tr>
            </table>
