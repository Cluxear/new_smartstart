<!-- Contact -->

<div class="contact-section" id="contact">
    <div class="container">


        <div class="clearfix"> </div>
        <div class="mail_grid_w3l">
            <form action="#" method="post">
                <div class="row-md-10 contact_center_grid">
                    <div class="breadcrumb">
                        <div >
                            <div class="box well col-md-12">

                                <section class="comments">
                                    <article class="comment">
                                        <a class="comment-img" href="#non">
                                            <img src="{{ asset('images/boy.png') }}" alt="" width="50" height="50">
                                        </a>
                                        <div class="comment-body">


                                            <h3> Sujet : {{ reclamation.sujetreclamation }}</h3>

                                            <div class="text">
                                                <p>{{ reclamation.descriptionreclamation }}</p>
                                            </div>
                                            <p class="attribution">by <a href="#non">{{ reclamation.idclient.username }}</a> at {{ reclamation.datereclamation | date }}</p>
                                        </div>
                                    </article>
                                    {% if reponse  %}

                                        <article class="comment">
                                            <a class="comment-img" href="#non">
                                                <img src="{{ asset('images/boy.png') }}" alt="" width="50" height="50">
                                            </a>
                                            <div class="comment-body">

                                                <h3> Sujet : {{ reponse.sujet }}</h3>
                                                <div class="text">
                                                    <p>Sujet : {{ reponse.reponse }}</p>
                                                </div>
                                                <p class="attribution">by admin <a href="#non">{{ reponse.idadmin.username }}</a> </p>

                                            </div>
                                        </article>

                                    {% endif %}
                                </section>
                            </div>
                            {% if reponse == null %}
                                <div class="container">
                                    <div class="col-sm-10" style="    padding-right: 15%;">
                                        <div class="bs-calltoaction bs-calltoaction-warning">
                                            <div class="row">
                                                <div class="col-md-9 cta-contents " align="center">
                                                    <h3 class="cta-title">Votre reclamation est en cours de traitement   </h3>
                                                    <p> vous serez averti quand elle sera traitée</p>
                                                    <div class="cta-desc">

                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div >





                <div class="clearfix"> </div>

            </form>
        </div>
    </div>
